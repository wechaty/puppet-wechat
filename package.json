{
  "name": "wechaty-puppet-wechat",
  "version": "0.30.5",
  "description": "Puppet WeChat for Wechaty",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/src/mod.js",
      "require": "./dist/cjs/src/mod.js"
    }
  },
  "typings": "./dist/esm/src/mod.d.ts",
  "engines": {
    "wechaty": ">=0.68",
    "wechaty-puppet": ">=0.40"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm-run-all clean build dist:copy",
    "build": "tsc && tsc -p tsconfig.cjs.json && shx echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "dist:copy": "npm-run-all copy:esm copy:cjs",
    "copy:js": "shx cp src/*.js dist/src/",
    "copy:esm": "shx cp -R commonjs/ dist/esm/ && shx cp src/*.js dist/esm/src/",
    "copy:cjs": "shx cp -R commonjs/ dist/cjs/ && shx cp src/*.js dist/cjs/src/",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:es": "eslint --ignore-pattern fixtures/ \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tsc --isolatedModules --noEmit",
    "start": "cross-env NODE_OPTIONS=\"--no-warnings --loader=ts-node/esm\" node examples/ding-dong-bot.ts",
    "test": "npm run lint && npm run test:unit",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "cross-env NODE_OPTIONS=\"--no-warnings --loader=ts-node/esm\" tap \"src/**/*.spec.ts\" \"tests/**/*.spec.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wechaty/wechaty-puppet-wechat.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "wechat",
    "chatbot",
    "bot",
    "sdk",
    "puppet",
    "weixin"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/wechaty/wechaty-puppet-wechat/issues"
  },
  "devDependencies": {
    "@chatie/eslint-config": "^0.14.1",
    "@chatie/git-scripts": "^0.6.2",
    "@chatie/semver": "^0.4.7",
    "@chatie/tsconfig": "^0.20.2",
    "@types/bl": "^2",
    "@types/md5": "^2.3.1",
    "@types/mime": "^2.0.3",
    "@types/qr-image": "^3.2.4",
    "@types/raven": "^2.5.4",
    "@types/request": "^2.48.7",
    "@types/xml2js": "^0.4.9",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "pkg-jq": "^0.2.11",
    "shx": "^0.3.3",
    "tstest": "^0.7.2",
    "typescript": "^4.4.2",
    "wechaty-puppet": "^0.43.10",
    "why-is-node-running": "^2.2.0"
  },
  "peerDependencies": {
    "wechaty-puppet": ">=0.40"
  },
  "homepage": "https://github.com/wechaty/wechaty-puppet-wechat#readme",
  "dependencies": {
    "bl": "^2",
    "cockatiel": "^2.0.2",
    "md5": "^2.3.0",
    "mime": "^2.5.2",
    "puppeteer": "^10.2.0",
    "puppeteer-extra": "^3.1.18",
    "puppeteer-extra-plugin-stealth": "^2.7.8",
    "qr-image": "^3.2.0",
    "request": "^2.88.2",
    "rx-queue": "^0.12.6",
    "rxjs": "^7.3.0",
    "state-switch": "^0.17.1",
    "watchdog": "^0.8.17",
    "xml2js": "^0.4.23"
  },
  "files": [
    "bin/",
    "dist/",
    "src/"
  ],
  "tap": {
    "check-coverage": false
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "git": {
    "scripts": {
      "pre-push": "npx git-scripts-pre-push"
    }
  }
}
