{
  "name": "wechaty-puppet-puppeteer",
  "version": "0.15.4",
  "description": "Puppet Puppeteer for Wechaty",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "engines": {
    "wechaty": ">=0.18.0"
  },
  "scripts": {
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && tsc && shx cp src/*.js dist/src/",
    "pack": "npm pack",
    "lint": "npm run lint:es && npm run lint:ts && npm run lint:md",
    "lint:es": "eslint \"{bin,examples,scripts,src,tests}/**/*.js\" --ignore-pattern=\"tests/fixtures/**\"",
    "lint:md": "markdownlint README.md",
    "lint:ts": "tslint --project tsconfig.json && tsc --noEmit",
    "start": "ts-node examples/demo.ts",
    "test": "npm run lint && npm run test:unit:retry",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "blue-tape -r ts-node/register \"src/**/*.spec.ts\" \"src/*.spec.ts\" \"tests/*.spec.ts\" \"tests/**/*.spec.ts\"",
    "test:unit:retry": "ts-node scripts/retry-unit-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chatie/wechaty-puppet-puppeteer.git"
  },
  "keywords": [
    "chatie",
    "wechaty",
    "wechat",
    "chatbot",
    "bot",
    "sdk",
    "puppet",
    "weixin"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Chatie/wechaty-puppet-puppeteer/issues"
  },
  "devDependencies": {
    "@types/bl": "^2.1.0",
    "@types/blue-tape": "^0.1.31",
    "@types/lru-cache": "^4.1.1",
    "@types/md5": "^2.1.32",
    "@types/mime": "^2.0.0",
    "@types/node": "^11.13.4",
    "@types/normalize-package-data": "^2.4.0",
    "@types/promise-retry": "^1.1.2",
    "@types/puppeteer": "^1.11.1",
    "@types/qr-image": "^3.2.1",
    "@types/raven": "^2.5.1",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.47.1",
    "@types/retry": "0.10.1",
    "@types/semver": "^6.0.0",
    "@types/sinon": "^7.0.2",
    "@types/xml2js": "^0.4.3",
    "ajv": "^6.5.2",
    "babel-eslint": "^10.0.0",
    "blue-tape": "^1.0.0",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "file-box": "^0.8.24",
    "git-scripts": "^0.2.1",
    "markdownlint-cli": "^0.14.0",
    "memory-card": "^0.6.2",
    "normalize-package-data": "^2.4.0",
    "semver": "^6.0.0",
    "shx": "^0.3.1",
    "sinon": "^7.2.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.0",
    "typescript": "^3.0.1",
    "wechaty-puppet": "^0.14.1"
  },
  "git": {
    "scripts": {
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "peerDependencies": {
    "file-box": "^0.8.22",
    "wechaty-puppet": "^0.14.1"
  },
  "homepage": "https://github.com/Chatie/wechaty-puppet-puppeteer#readme",
  "dependencies": {
    "bl": "^3.0.0",
    "brolog": "^1.6.5",
    "hot-import": "^0.2.1",
    "lru-cache": "^5.0.0",
    "md5": "^2.2.1",
    "mime": "^2.3.1",
    "promise-retry": "^1.1.1",
    "puppeteer": "^1.11.0",
    "qr-image": "^3.2.0",
    "read-pkg-up": "^5.0.0",
    "request": "^2.87.0",
    "rx-queue": "^0.8.1",
    "rxjs": "^6.2.1",
    "state-switch": "^0.6.2",
    "watchdog": "^0.8.15",
    "xml2js": "^0.4.19"
  }
}
